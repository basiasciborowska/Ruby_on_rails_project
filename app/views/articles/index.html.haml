%h1 Listing Articles
%br/
%table
  %tr
    %th
    %th{:colspan => "3"}
  - articles = Article.all
  - articles.each do |article|
    %tr
      %td
        %p{:style => "margin:10px"}= link_to article.title, article
        %p{:style => "margin:10px; font-size:14px"}= article.text
      %td
        - if can? :update, @article
          %p{:style => "margin:10px; margin-top:-20px"}= link_to " Edit ", edit_article_path(article)
      %td
        %p{:style => "margin:10px; margin-top:-20px"}= link_to ' Destroy ', article_path(article), |
          method: :delete,                           |
          data: { confirm: 'Are you sure?' }         |
  - if articles.size == 0
    %em No Articles Found
    %br/
    %br/
